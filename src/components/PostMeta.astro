---
import { getEntry } from 'astro:content'
import { Image } from 'astro:assets'

const { post } = Astro.props
const author = await getEntry('authors', post)
---

<div class='mb-10 flex items-center justify-between'>
  <div class='flex items-center gap-x-2'>
    {
      author && (
        <>
          <a href={`/recipes/author/${author.slug}`}>
            <Image
              src={author.data.image}
              alt={author.data.name}
              aria-label={`Read more from ${author.data.name}`}
              width={48}
              height={48}
              format='webp'
              class='aspect-square w-12 rounded-full border-2 border-teal-500 object-cover'
            />
          </a>
          <a href={`/author/${author.slug}`} class='text-2xl font-bold text-zinc-600'>
            {author.data.name}
          </a>
        </>
      )
    }
  </div>
</div>
