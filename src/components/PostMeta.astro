---
import {getEntry } from 'astro:content'
import {Image} from "astro:assets"


const {post} = Astro.props
const author = await getEntry("authors", post)
---

<div class="flex justify-between items-center mb-10">
    <div class="flex items-center gap-x-2">
      {author && (
        <>
          <a href={`/recipes/author/${author.slug}`}>
            <Image
              src={author.data.image}
              alt={author.data.name}
              aria-label={`Read more from ${author.data.name}`}
              width={48}
              height={48}
              format="webp"
              class="rounded-full border-2 border-teal-500 aspect-square w-12 object-cover"
            />
          </a>
          <a href={`/author/${author.slug}`} class="text-zinc-600 text-2xl font-bold">
            {author.data.name}
          </a>
        </>
      )}
    </div>
  </div>
  